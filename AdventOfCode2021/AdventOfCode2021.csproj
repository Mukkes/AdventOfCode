<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>AdventOfCode2021.$(MSBuildProjectName)</AssemblyName>
		<RootNamespace>AdventOfCode2021.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Year2020\**" />
		<EmbeddedResource Remove="Year2020\**" />
		<None Remove="Year2020\**" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="Year2021\ExampleInputs\Day12.txt" />
		<None Remove="Year2021\ExampleInputs\Day13.txt" />
		<None Remove="Year2021\ExampleInputs\Day14.txt" />
		<None Remove="Year2021\ExampleInputs\Day15.txt" />
		<None Remove="Year2021\Inputs\Day12.txt" />
		<None Remove="Year2021\Inputs\Day13.txt" />
		<None Remove="Year2021\Inputs\Day14.txt" />
		<None Remove="Year2021\Inputs\Day15.txt" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="Year2021\ExampleInputs\Day15.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\ExampleInputs\Day14.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\ExampleInputs\Day13.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\ExampleInputs\Day12.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\Inputs\Day15.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\Inputs\Day14.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\Inputs\Day13.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Year2021\Inputs\Day12.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
